<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Reminder.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Dashboard">
    
    <Grid RowDefinitions="Auto,*" Padding="10">
        <!-- Summary Section -->
        <Frame
            Margin="0,10,0,20"
            Padding="20"
            CornerRadius="15"
            HasShadow="True">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0.0" Color="{StaticResource Primary}" />
                    <GradientStop Offset="1.0" Color="{StaticResource PrimaryGradientEnd}" />
                </LinearGradientBrush>
            </Frame.Background>
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <Label
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,10"
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="Pending Reminders"
                    TextColor="White" />
                
                <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                    <Label
                        FontSize="16"
                        Text="Total Amount"
                        TextColor="White" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="24"
                        Text="{Binding PendingAmount, StringFormat='₹{0:N0}'}"
                        TextColor="White" />
                </VerticalStackLayout>
                
                <VerticalStackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="End">
                    <Label
                        FontSize="16"
                        Text="Count"
                        TextColor="White" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="24"
                        Text="{Binding PendingCount}"
                        TextColor="White" />
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Pending Payments List -->
        <RefreshView
            x:Name="refreshView"
            Grid.Row="1"
            Command="{Binding LoadPaymentsCommand}">
            <CollectionView
                x:Name="PaymentsList"
                ItemsSource="{Binding PendingPayments}"
                SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Image
                            HeightRequest="100"
                            Source="payment_empty.png"
                            WidthRequest="100" />
                        <Label
                            Margin="0,20,0,0"
                            FontSize="18"
                            Text="No pending reminders"
                            TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5">
                            <Frame Padding="15" CornerRadius="10" HasShadow="True">
                                <Frame.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0.0" Color="{StaticResource Secondary}" />
                                        <GradientStop Offset="1.0" Color="White" />
                                    </LinearGradientBrush>
                                </Frame.Background>
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="5">
                                    <!-- Payment Details -->
                                    <Label
                                        Grid.Column="0"
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        Text="{Binding Name}" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        FontSize="14"
                                        Text="{Binding Description}"
                                        TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        FontSize="14"
                                        Text="{Binding DueDate, StringFormat='Due: {0:dd-MM-yyyy}'}"
                                        TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />

                                    <!-- Amount and Complete Button -->
                                    <StackLayout Grid.RowSpan="3" Grid.Column="1" Spacing="10">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="18"
                                            HorizontalOptions="End"
                                            Text="{Binding Amount, StringFormat='₹{0:N0}'}" />
                                        <Button
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CompletePaymentCommand}"
                                            CommandParameter="{Binding .}"
                                            HeightRequest="35"
                                            Text="Complete"
                                            WidthRequest="100">
                                            <Button.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Offset="0.0" Color="{StaticResource Primary}" />
                                                    <GradientStop Offset="1.0" Color="{StaticResource PrimaryGradientEnd}" />
                                                </LinearGradientBrush>
                                            </Button.Background>
                                        </Button>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>