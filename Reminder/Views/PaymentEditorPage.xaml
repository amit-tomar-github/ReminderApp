<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Reminder.Views.PaymentEditorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <Grid
            Padding="20"
            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
            RowSpacing="20">
            <!--  Name Entry  -->
            <Frame
                Grid.Row="0"
                Padding="15,5"
                BorderColor="{AppThemeBinding Light={StaticResource Primary},
                                              Dark={StaticResource PrimaryDark}}"
                CornerRadius="10"
                HasShadow="True">
                <Entry
                    x:Name="NameEntry"
                    FontSize="16"
                    Placeholder="Reminder Name"
                    Text="{Binding Name}" />
            </Frame>

            <!--  Description Entry  -->
            <Frame
                Grid.Row="1"
                Padding="15,5"
                BorderColor="{AppThemeBinding Light={StaticResource Primary},
                                              Dark={StaticResource PrimaryDark}}"
                CornerRadius="10"
                HasShadow="True">
                <Entry
                    x:Name="DescEntry"
                    FontSize="16"
                    Placeholder="Description"
                    Text="{Binding Description}" />
            </Frame>

            <!--  Due Date Picker  -->
            <Frame
                Grid.Row="2"
                Padding="15,5"
                BorderColor="{AppThemeBinding Light={StaticResource Primary},
                                              Dark={StaticResource PrimaryDark}}"
                CornerRadius="10"
                HasShadow="True">
                <DatePicker
                    x:Name="DueDatePicker"
                    Date="{Binding DueDate}"
                    FontSize="16"
                    Format="dd-MM-yyyy" />
            </Frame>

            <!--  Amount Entry  -->
            <Frame
                Grid.Row="3"
                Padding="15,5"
                BorderColor="{AppThemeBinding Light={StaticResource Primary},
                                              Dark={StaticResource PrimaryDark}}"
                CornerRadius="10"
                HasShadow="True">
                <Entry
                    x:Name="AmountEntry"
                    FontSize="16"
                    Keyboard="Numeric"
                    Placeholder="Amount"
                    Text="{Binding Amount}" />
            </Frame>

            <!--  Status Switch  -->
            <Frame
                Grid.Row="4"
                Padding="15,5"
                BorderColor="{AppThemeBinding Light={StaticResource Primary},
                                              Dark={StaticResource PrimaryDark}}"
                CornerRadius="10"
                HasShadow="True">
                <Grid ColumnDefinitions="*,Auto">
                    <Label
                        FontSize="16"
                        Text="Reminder Completed"
                        VerticalOptions="Center" />
                    <Switch
                        x:Name="StatusSwitch"
                        Grid.Column="1"
                        IsToggled="{Binding IsCompleted}"
                        OnColor="{StaticResource Primary}" />
                </Grid>
            </Frame>

            <!--  Save Button  -->
            <Grid Grid.Row="5" RowDefinitions="Auto">
                <Button
                    x:Name="SaveButton"
                    Clicked="OnSaveClicked"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="50"
                    Text="Save Reminder">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0.0" Color="{StaticResource Primary}" />
                            <GradientStop Offset="1.0" Color="{StaticResource PrimaryGradientEnd}" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <ActivityIndicator
                    x:Name="ActivityIndicator"
                    HorizontalOptions="Center"
                    IsRunning="True"
                    IsVisible="False"
                    VerticalOptions="Center" />
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>