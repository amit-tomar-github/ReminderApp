<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="Reminder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Reminder.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Dashboard" Icon="home">
            <ShellContent
                Title="Dashboard"
                ContentTemplate="{DataTemplate views:DashboardPage}" />
        </Tab>
        <Tab Title="Reminders" Icon="reminder">
            <ShellContent
                Title="Reminders"
                ContentTemplate="{DataTemplate views:RemindersPage}" />
        </Tab>
    </TabBar>

</Shell>
